<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReservar"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/degradado_button"
        android:minHeight="0dp"
        android:paddingTop="0dp"
        android:layout_gravity="right |bottom"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="18dp"
        android:text="@string/cancelar"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/nombreEvento"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/background_bookings"
            android:gravity="center | left"
            android:paddingLeft="20dp"
            android:text="null"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_rounded"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"

                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descripci_n"
                    android:textColor="@color/rojo_claro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDescripcioEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lugar"
                    android:textColor="@color/rojo_claro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtLugarEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/precio"
                    android:textColor="@color/rojo_claro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtPrecioEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fecha"
                    android:textColor="@color/rojo_claro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtFechaEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hora"
                    android:textColor="@color/rojo_claro"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtHoraEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="null" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>