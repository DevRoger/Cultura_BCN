<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/message_body"
        android:visibility="visible"
        android:layout_width="350dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@color/white">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Nombre ususario"
                android:layout_gravity="center"
                android:textColor="@color/rojo_oscuro"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/message_data"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:textSize="18dp"
            android:layout_height="wrap_content"
            android:text="El sol se oculta lentamente, tiñendo el cielo de naranja y rojo. La brisa fresca acaricia las hojas de los árboles, susurrando historias antiguas. En el horizonte, la luna comienza a asomar, iluminando la oscuridad con su luz suave."
            android:textColor="@color/rojo_oscuro"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="fecha de envio y hora"
                android:textColor="@color/rojo_oscuro"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/message_video"
        android:visibility="gone"
        android:layout_width="350dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar_video"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@color/white">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/user_name_video"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Nombre ususario"
                android:layout_gravity="center"
                android:textColor="@color/rojo_oscuro"
                />
        </LinearLayout>
        <VideoView
            android:id="@+id/video"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            >
        </VideoView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_video"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="fecha de envio y hora"
                android:textColor="@color/rojo_oscuro"
                />
            <ImageView
                android:id="@+id/icono_visto_video"
                android:background="@color/rojo_oscuro"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_image"
        android:visibility="gone"
        android:layout_width="350dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar_image"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@color/white">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/user_name_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Nombre ususario"
                android:layout_gravity="center"
                android:textColor="@color/rojo_oscuro"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_image"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="fecha de envio y hora"
                android:textColor="@color/rojo_oscuro"
                />
            <ImageView
                android:id="@+id/icono_visto_image"
                android:background="@color/rojo_oscuro"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_audio"
        android:visibility="gone"
        android:layout_width="350dp"
        tools:ignore="RtlCompat"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_card"
        android:padding="15dp"
        android:layout_marginBottom="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/avatar_audio"
                app:shapeAppearanceOverlay="@style/CircularImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="centerCrop"
                android:background="@color/white">
            </com.google.android.material.imageview.ShapeableImageView>
            <TextView
                android:id="@+id/user_name_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Nombre ususario"
                android:layout_gravity="center"
                android:textColor="@color/rojo_oscuro"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/date_audio"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="fecha de envio y hora"
                android:textColor="@color/rojo_oscuro"
                />
            <ImageView
                android:id="@+id/icono_visto_audio"
                android:background="@color/rojo_oscuro"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>