<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/border_card">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewEvento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/item_evento_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bottom_rounded"
                android:orientation="vertical"
                android:paddingBottom="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:padding="2dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_image_item_event"
                        android:scaleType="centerCrop"
                        android:src="@drawable/side_nav_bar" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/nombreEvento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="null"

                            android:textColor="@color/rojo_claro"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"

                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Preu: "
                                android:textColor="@color/rojo_claro"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/precioEvento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="null" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data: "
                                android:textColor="@color/rojo_claro"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/fechaEvento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="null" />

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hora: "
                                android:textColor="@color/rojo_claro"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/horaEvento"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="null" />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/flecha_abajo_roja" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/itemDesplegable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/item_evento_background"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone"> <!-- CAMBIAR VISIBILIDAD -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="6dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Descripció: "
                            android:textColor="@color/rojo_claro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descripcionEvento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aforament: "
                            android:textColor="@color/rojo_claro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/aforoEvento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Edat mínima: "
                            android:textColor="@color/rojo_claro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/edadMinima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lloc: "
                            android:textColor="@color/rojo_claro"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lugarEvento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="null" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Botón de reserva -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReservar"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/degradado_button"
                    android:minHeight="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginBottom="10dp"
                    android:text="RESERVAR"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />



            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>