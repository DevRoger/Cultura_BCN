<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:orientation="vertical"
    tools:context=".ui.informacion.InformacionFragment">

    <!-- LinearLayout como contenedor principal para manejar la orientación y el flujo de los elementos -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Título de la sección -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/faqs_preguntas_frecuentes"
            android:textAlignment="center"
            android:textColor="@color/rojo_claro"
            android:textSize="25sp"
            android:textStyle="bold" />

        <!-- Primera pregunta y su respuesta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_1_c_mo_puedo_reservar_entradas_para_un_evento"
            android:textAlignment="textStart"
            android:textColor="@color/rojo_claro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/puedes_reservar_tus_entradas_directamente_desde_la_aplicaci_n_seleccionando_el_evento_de_tu_inter_s_en_la_secci_n_de_eventos_y_siguiendo_los_pasos_para_completar_tu_reserva_aseg_rate_de_tener_una_cuenta_en_la_aplicaci_n_para_poder_finalizar_la_reserva"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <!-- Segunda pregunta y su respuesta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_2_es_necesario_crear_una_cuenta_para_usar_la_aplicaci_n"
            android:textAlignment="textStart"
            android:textColor="@color/rojo_claro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/no_es_necesario_crear_una_cuenta_para_navegar_por_la_aplicaci_n_y_ver_los_eventos_pero_s_debes_registrarte_si_deseas_realizar_reservas_tener_una_cuenta_tambi_n_te_permitir_recibir_notificaciones_sobre_nuevos_eventos_y_ofertas_especiales"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <!-- Tercera pregunta y su respuesta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_3_puedo_cancelar_o_modificar_mi_reserva"
            android:textAlignment="textStart"
            android:textColor="@color/rojo_claro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_puedes_cancelar_o_modificar_tu_reserva_desde_la_secci_n_de_mis_reservas_dentro_de_la_aplicaci_n_ten_en_cuenta_que_algunos_eventos_pueden_tener_pol_ticas_espec_ficas_sobre_cambios_y_cancelaciones_por_lo_que_te_recomendamos_revisar_los_t_rminos_al_realizar_la_reserva"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <!-- Cuarta pregunta y su respuesta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_4_el_edificio_es_accesible_para_personas_con_movilidad_reducida"
            android:textAlignment="textStart"
            android:textColor="@color/rojo_claro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_el_edificio_est_completamente_adaptado_para_personas_con_movilidad_reducida_contamos_con_accesos_especiales_ascensores_y_ba_os_adaptados_si_necesitas_asistencia_adicional_no_dudes_en_contactarnos_a_trav_s_de_la_secci_n_de_contacto_de_la_aplicaci_n"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <!-- Quinta pregunta y su respuesta -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="8dp"
            android:text="@string/_5_c_mo_llego_al_edificio"
            android:textAlignment="textStart"
            android:textColor="@color/rojo_claro"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/puedes_encontrar_la_ubicaci_n_exacta_y_un_mapa_interactivo_en_la_secci_n_de_informaci_n_de_la_aplicaci_n_adem_s_si_tienes_dudas_sobre_el_transporte_p_blico_o_las_mejores_rutas_tambi_n_te_ofrecemos_informaci_n_detallada_para_facilitar_tu_llegada"
            android:textAlignment="textStart"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
