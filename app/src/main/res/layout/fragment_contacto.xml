<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white"
    tools:context=".ui.informacion.InformacionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Título de la sección -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacta con nosotros"
            android:textAlignment="center"
            android:textColor="@color/rojo_claro"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp" />

        <!-- Dirección -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dirección:"
            android:textColor="@color/rojo_claro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edifici Cultural Can Manyé\nCarrer de Mallorca, 401, 08013 Barcelona"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <!-- Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Atención telefónica:"
            android:textColor="@color/rojo_claro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tel. general: 932 123 456\nHorario: de lunes a viernes, de 9:00 a 18:00 h"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <!-- Correo -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo:"
            android:textColor="@color/rojo_claro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="contacte@barcelona.cat\neventos.cultura@barcelona.cat"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic" />

        <!-- Redes sociales -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redes sociales:"
            android:textColor="@color/rojo_claro"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp">

            <!-- Iconos de Redes Sociales -->
            <ImageView
                android:id="@+id/btnInstagram"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_instagram"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/btnTwitter"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_twitter"
                android:layout_marginEnd="25dp" />

            <ImageView
                android:id="@+id/btnAjuntament"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_ajuntament" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
